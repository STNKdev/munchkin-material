{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "chrome": 49,
          "edge": 14,
          "firefox": 45,
          "ie": 11,
          "safari": 10
        },
        "useBuiltIns": "usage"
      }
    ],
    "stage-3",
    "react"
  ],

  "plugins": [
    "lodash",
    "syntax-dynamic-import",
    "version-inline"
  ],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel",
        [
          "react-intl",
          {
            "messagesDir": "./messages/"
          }
        ]
      ]
    },

    "production": {
      "presets": [
        "react-optimize"
      ]
    },

    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
