{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "last 2 versions",
            "chrome >= 30",
            "not ie <= 10"
          ]
        },
        "useBuiltIns": true
      }
    ],
    [
      "es2015",
      {
        "modules": false
      }
    ],
    "stage-3",
    "react"
  ],

  "plugins": [
    "version-inline"
  ],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel",
        [
          "react-intl",
          {
            "messagesDir": "./messages/"
          }
        ]
      ]
    },

    "production": {
      "presets": [
        "react-optimize"
      ]
    },

    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
