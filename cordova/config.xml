<?xml version='1.0' encoding='utf-8'?>
<widget id="com.izorg.munchkin" version="10.5.4"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Munchkin</name>
    <description>
        Simple but powerful Munchkin Level Counter
    </description>
    <author email="izorgster@gmail.com" href="https://allmunchkins.com">
        Viacheslav Zavoruev
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="sentry.io" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="HeaderColor" value="#795548" />
        <resource-file src="google-services.json" target="app/google-services.json" />
        <icon density="ldpi" background="res/android/mipmap-ldpi/icon_background.png" foreground="res/android/mipmap-ldpi/icon_foreground.png" src="res/android/mipmap-ldpi/icon.png" />
        <icon density="mdpi" background="res/android/mipmap-mdpi/icon_background.png" foreground="res/android/mipmap-mdpi/icon_foreground.png" src="res/android/mipmap-mdpi/icon.png" />
        <icon density="hdpi" background="res/android/mipmap-hdpi/icon_background.png" foreground="res/android/mipmap-hdpi/icon_foreground.png" src="res/android/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" background="res/android/mipmap-xhdpi/icon_background.png" foreground="res/android/mipmap-xhdpi/icon_foreground.png" src="res/android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" background="res/android/mipmap-xxhdpi/icon_background.png" foreground="res/android/mipmap-xxhdpi/icon_foreground.png" src="res/android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" background="res/android/mipmap-xxxhdpi/icon_background.png" foreground="res/android/mipmap-xxxhdpi/icon_foreground.png" src="res/android/mipmap-xxxhdpi/icon.png" />
        <splash density="land-xhdpi" src="res/android/splash-land-xhdpi.png" />
        <splash density="port-xhdpi" src="res/android/splash-port-xhdpi.png" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:roundIcon="@mipmap/ic_launcher" />
        </edit-config>
        <resource-file src="res/android/mipmap-hdpi/icon_round.png" target="app/src/main/res/mipmap-hdpi/ic_launcher_round.png" />
        <resource-file src="res/android/mipmap-mdpi/icon_round.png" target="app/src/main/res/mipmap-mdpi/ic_launcher_round.png" />
        <resource-file src="res/android/mipmap-xhdpi/icon_round.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher_round.png" />
        <resource-file src="res/android/mipmap-xxhdpi/icon_round.png" target="app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png" />
        <resource-file src="res/android/mipmap-xxxhdpi/icon_round.png" target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <preference name="deployment-target" value="10.0" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="SuppressesLongPressGesture" value="true" />
        <preference name="WKWebViewOnly" value="true" />
        <resource-file src="GoogleService-Info.plist" />
        <icon height="29" src="res/ios/icon-29.png" width="29" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="58" src="res/ios/icon-58.png" width="58" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="80" src="res/ios/icon-80.png" width="80" />
        <icon height="87" src="res/ios/icon-87.png" width="87" />
        <icon height="100" src="res/ios/icon-100.png" width="100" />
        <icon height="120" src="res/ios/icon-120.png" width="120" />
        <icon height="152" src="res/ios/icon-152.png" width="152" />
        <icon height="167" src="res/ios/icon-167.png" width="167" />
        <icon height="180" src="res/ios/icon-180.png" width="180" />
        <icon height="1024" src="res/ios/icon-1024.png" width="1024" />
        <splash src="res/ios/Default@2x~universal~anyany.png" />
        <splash src="res/ios/Default@3x~universal~anyany.png" />
        <edit-config file="Munchkin/Munchkin-Info.plist" mode="merge" target="CFBundleDisplayName">
            <string>Level Counter</string>
        </edit-config>
        <edit-config file="Munchkin/Munchkin-Info.plist" mode="merge" target="UIRequiresFullScreen">
            <false />
        </edit-config>
    </platform>
    <platform name="windows">
      <preference name="windows-target-version" value="10.0" />
    </platform>
</widget>
