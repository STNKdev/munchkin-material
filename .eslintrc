{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "allways",
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "react/forbid-prop-types": [
      true,
      {
        "forbid": [
          "match"
        ]
      }
    ],
    "react/prop-types": [
      2,
      {
        "ignore": [
          "classes",
          "theme"
        ]
      }
    ]
  }
}
